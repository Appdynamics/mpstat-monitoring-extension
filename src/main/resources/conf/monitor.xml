<monitor>
    <name>MPStatMonitor</name>
    <type>managed</type>
    <description>Monitors report generated by mpstat command</description>
    <monitor-configuration></monitor-configuration>
    <enabled>true</enabled>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
        <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
        <name>MPStat Monitor Run Task</name>
        <display-name>MPStat Monitor Task</display-name>
        <description>MPStat Monitor Task</description>
        <type>java</type>
        <execution-timeout-in-secs>60</execution-timeout-in-secs>
        <task-arguments>
            <argument name="config-file" is-required="false" default-value="monitors/MPStatMonitor/config.yml"/>
        </task-arguments>
        <java-task>
            <classpath>mpstat-monitoring-extension.jar</classpath>
            <impl-class>com.appdynamics.extensions.mpstat.MPStatMonitor</impl-class>
        </java-task>
    </monitor-run-task>
</monitor>
